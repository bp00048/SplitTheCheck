<div class="container">

<div class="row">
  <div class="col">
    <%= render "header" %>
    </div>
    </div>
    <div class="col align-self-center">
    <div class="row justify-content-center">

 <%= @restaurant.name %>
</div>
</div>
<div class="row justify-content-center">
  <div class="location">  <%= @restaurant.location %></div>
  </div>

  <div class="row justify-content-center">
<% if @restaurant.website? then %>
<div class="website">
  <%= @restaurant.website %>
  <% end %>
  </div>
  </div>
<div class="row justify-content-center">
<div class="totalVotes">
  <%= (@restaurant.yes_split/(@restaurant.yes_split.to_f + @restaurant.no_split) * 100).to_i %> % Yes
</div>
<p>
  <strong>Yes Votes:</strong>
  <%= @restaurant.yes_split %>
</p>

<p>
  <strong>No Votes:</strong>
  <%= @restaurant.no_split %>
</p>
</div>
<div class="row justify-content-center">

  Did <%= @restaurant.name %> split the check?
<div class="row justify-content-center">
<div class="col-6 align-self-center">

  <br>
  <%= link_to 'yes', yes_path(@restaurant), class: "btn btn-primary", method: :put %>
    <%= link_to 'No', restaurant_path, class: "btn btn-danger" %>
    </div>




</div>
</div>




<%= link_to 'Back', restaurants_path %>
</div>
