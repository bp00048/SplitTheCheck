<% if !@restaurants.nil? %>
<h1>Search Results</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>

      <th colspan="3"></th>
    </tr>
  </thead>

<% @restaurants.each do |restaurant| %>
   <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= restaurant.name %></td>
    <td><%= restaurant.location %></td>
    <td><%= link_to 'Show', restaurant %></td>
  </tr>
<% end %>
<% end %>
</table>
