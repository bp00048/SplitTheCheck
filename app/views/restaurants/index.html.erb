
<div class="container">

  <div class="row justify-content-center">
    <h1>Search</h1>
    <div class="searchBoxes">
    <div class="col">

    Name:
    <form class="form" action="/searchName">
    <input class="form-control-inline" name="n" id="name"  type="text" placeholder="Name" aria-label="Search">
    <button class="btn btn-outline-success" type="submit" id="searchname">Search</button>

    </form>
    </div>
    <br>
    <div class="row">
    <div class="col">

    Location:
    <form class="form" action="/searchLocation">
    <input class="form-control-inline" name="s" id="location" type="text" placeholder="Location" aria-label="Search">
    <button class="btn btn-outline-success" type="submit" id="searchlocation">Search</button>
    </form>
    </div>
    </div>
    <% if user_signed_in? then %>
  <%= link_to 'Add Restaurant', new_restaurant_path %>
  <% end %>
    </div>

  <br>
</div>
<div class="row">

<% if @restaurants.present? %>
<%= render "searchResults" %>
<% end %>

<p></p>
</div>
</div>
